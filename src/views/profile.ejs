<style>
    

    .user-container {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 8px;
        width: 300px;
        text-align: center;
    }

    h4 {
        margin: 0;
        color: #333;
    }

    input {
        width: 80%;
        padding: 8px;
        margin: 8px 0;
        box-sizing: border-box;
    }

    button {
        background-color: #4caf50;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #45a049;
    }
</style>
</head>

<body>
<div class="user-container">
    <% users.forEach(user => { %>
        <h4>Username: <%= user.name %></h4>
        <h4>Email ID: <%= user.email %></h4>
        <h4>Password:
            <input type="password" value="<%= user.password %>" id="password_<%= user.id %>" readonly>
            <button onclick="togglePassword('<%= user.id %>')">Show/Hide</button>
        </h4>
    <% }) %>
</div>

<script>
    function togglePassword(userId) {
        var passwordInput = document.getElementById("password_" + userId);
        var button = event.target;

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            button.textContent = "Hide";
        } else {
            passwordInput.type = "password";
            button.textContent = "Show";
        }
    }
</script>